<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/post_detail_recyclerview_tag_height"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_tag_item"
            android:layout_width="@dimen/post_detail_recyclerview_tag_item_img_size"
            android:layout_height="@dimen/post_detail_recyclerview_tag_item_img_size"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp" />
        
        <ImageView
            android:id="@+id/imgColor"
            android:layout_width="@dimen/post_detail_recyclerview_tag_item_img_color_size"
            android:layout_height="@dimen/post_detail_recyclerview_tag_item_img_color_size"
            android:src="@drawable/posting_tagbox"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/img_tag_item"
            app:layout_constraintBottom_toBottomOf="@+id/img_tag_item"
            android:layout_marginBottom="0dp" />

        <ImageView
            android:id="@+id/img_dot"
            android:layout_width="@dimen/post_detail_recyclerview_img_tag_size"
            android:layout_height="@dimen/post_detail_recyclerview_img_tag_size"
            android:background="@drawable/posting_tagbox"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/img_tag_item"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>